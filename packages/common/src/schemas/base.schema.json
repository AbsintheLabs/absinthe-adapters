{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://adapters.absinthe.network/schemas/base.schema.json",
    "title": "Base Schema",
    "description": "Shared fields for transaction and time weighted balance schemas",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "evmAddress": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "hex32": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{64}$"
        }
    },
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "eventId": {
            "type": "string"
        },
        "userId": {
            "type": "string",
            "description": "Wallet address that triggered the event.",
            "oneOf": [
                {
                    "$ref": "#/definitions/evmAddress"
                }
            ]
        },
        "chainArch": {
            "type": "string",
            "$comment": "Currently only EVM is supported",
            "enum": [
                "evm"
            ]
        },
        "networkId": {
            "type": "integer",
            "minimum": 1
        },
        "chainShortName": {
            "type": "string",
            "minLength": 2
        },
        "runner": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "runnerId": {
                    "$comment": "The runnerId is typically the container id of the indexer",
                    "type": "string"
                }
            },
            "required": [
                "runnerId"
            ]
        },
        "protocolMetadata": {
            "description": "Up-to-10 flexible metadata slots with explicit typing.",
            "type": "object",
            "maxProperties": 10,
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z0-9_]+$": {
                    "type": "object",
                    "required": [
                        "type",
                        "value"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "bigint",
                                "number",
                                "address",
                                "string"
                            ]
                        },
                        "value": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "pattern": "^[0-9]+$",
                                    "title": "bigint"
                                },
                                {
                                    "type": "number",
                                    "title": "number"
                                },
                                {
                                    "$ref": "#/definitions/evmAddress",
                                    "title": "address"
                                },
                                {
                                    "type": "string",
                                    "title": "string"
                                }
                            ]
                        }
                    }
                }
            }
        },
        "valueUsd": {
            "type": "number",
            "minimum": 0
        },
        "priced": {
            "type": "object",
            "required": [
                "value",
                "currency",
                "source",
                "unixTimestampMs"
            ],
            "additionalProperties": false,
            "properties": {
                "value": {
                    "type": "number",
                    "minimum": 0
                },
                "currency": {
                    "type": "string",
                    "$comment": "Currently only USD is supported",
                    "enum": [
                        "USD"
                    ]
                },
                "source": {
                    "type": "string",
                    "minLength": 2
                },
                "unixTimestampMs": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    },
    "required": [
        "version",
        "eventId",
        "userId",
        "chainArch",
        "networkId",
        "chainShortName",
        "runner",
        "valueUsd",
        "unixTimestampMs"
    ]
}